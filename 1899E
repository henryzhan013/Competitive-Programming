#include <iostream>
#include <algorithm>
#include <cstring>
#include <map>
 
using namespace std;
typedef long long ll;
const ll N=200005;
ll a[N+5];
 
void solve(){
    ll n,mi=1000000005,index=-1;
    cin>>n;
    for(ll i=1;i<=n;i++){
        cin>>a[i];
        if(a[i]<mi){
            mi=a[i];
            index=i;
        }
    }
    for(ll i=index+1;i<n;i++){
        if(a[i]>a[i+1]){
            cout<<-1<<"\n";
            return;
        }
    }
    cout<<index-1<<"\n";
}
 
int main() {
    ios::sync_with_stdio(false);  cin.tie(0);
    int t;
    cin>>t;
    while(t--){
        solve();
    }
    return 0;
}

#include <iostream>

using namespace std;

int main(){
    long long a[202][202];
    int n;
    long long sum=0;
    cin>>n;
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            cin>>a[i][j];
            sum+=a[i][j];
        }
    }
    long long miss=10000000000;
    for(int i=0;i<n;i++){
        if(a[i][n-1-i]<miss){
            miss=a[i][n-1-i];
        }
    }
    cout<<sum-miss<<endl;
    return 0;
}

#include <iostream>
#include <vector>
 
using namespace std;
 
void solve(){
    int n;
    cin>>n;
    string s;
    cin>>s;
    int cnt=0;
    for(int i=0;i<n-2;i++){
        if(s[i]=='.'){
            cnt++;
            if(s[i+1]=='.' && s[i+2]=='.'){
                cout<<2<<endl;
                return;
            }
        }
    }
    if(s[n-2]=='.') cnt++;
    if(s[n-1]=='.') cnt++;
    cout<<cnt<<endl;
    
}
 
int main(){
    std::ios_base::sync_with_stdio(false);
    std::cin.tie(nullptr);
    int t;
    cin>>t;
    while(t--){
        solve();
    }
    return 0;
}
 

#include <iostream>
#include <algorithm>
 
using namespace std;
 
void solve(){
    int n;
    cin>>n;
    int a[n];
    long long sum=0;
    for(int i=1;i<=n;i++){
        cin>>a[i];
        if(a[i]>0) sum+=a[i];
    }
    if(n!=1){
        if(a[2]>0 && a[1]<0){
            if(abs(a[2])<abs(a[1])){
                sum-=a[2];
            }else{
                sum+=a[1];
            }
        }
    }
    cout<<sum<<endl;
}
 
int main() {
    ios::sync_with_stdio(false);  cin.tie(0); 
    int t;
    cin>>t;
    while(t--){
         solve();
    }
}

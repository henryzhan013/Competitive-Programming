void solve(){
    ll n;
    cin>>n;
    vector<ll> a(n+1), b(n+1);
    for(int i=1;i<=n;++i) cin>>a[i];
    for(int i=1;i<=n;++i) cin>>b[i];
    ll ans=-1;
    set<ll> cnt;
    for(int i=1;i<=n;++i){
        if(a[i]==0 && b[i]==0){
            continue;
        }
        ll a1=a[i],a2=b[i];
        ll x=gcd(a1,a2);
        a1/=x; a2/=x;
        if(a1%2==0 && a2%2==1){
            cnt.insert(0);
        }else if(a1%2==1 && a2%2==0){
            cnt.insert(1);
        }else{
            cnt.insert(2);
        }
    }
    if(cnt.size()<=1){
        yes;
    }else{
        no;
    }
}
int32_t main(){
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    ll t;
    cin>>t;
    while(t--){
        solve();
    }
    return 0;
}
 

#include <iostream>
#include <vector>
 
using namespace std;
 
void solve(){
    int n,k;
    cin>>n>>k;
    vector<int> a(n+1);
    for(int i=1;i<=n;++i) cin>>a[i];
    bool flag=true;
    for(int i=2;i<=n;++i){
        if(a[i]<a[i-1]) flag=false;
    }
    if(flag){
        cout<<"Yes\n";
        return;
    }
    if(k==1){
        cout<<"No\n";
    }else{
        cout<<"Yes\n";
    }
}
 
int main(){
    std::ios_base::sync_with_stdio(false);
    std::cin.tie(nullptr);
    int t;
    cin>>t;
    while(t--){
        solve();
    }
    return 0;
}

#include <iostream>
#include <vector>
#include <map>
#include <set>
#include <algorithm>
 
#define int long long
#define yes cout<<"Yes\n"
#define no cout<<"No\n";
#define endl "\n"
using namespace std;
 
void solve(){
    int n;
    cin>>n;
    vector<int> a(n+1);
    for(int i=1;i<=n;++i) cin>>a[i];
    int cnt=0;
    for(int i=n-1;i>=1;--i){
        if(a[i]>a[i+1]){
            int cur=(a[i]-1)/a[i+1];
            cnt+=cur;
            a[i]=a[i]/(cur+1);
        }
    }
    cout<<cnt<<endl;
}

int32_t main(){
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int t;
    cin>>t;
    while(t--){
        solve();
    }
}

#include <cstring>
#include <iostream>
#include <set>
#include <vector>
 
using namespace std;
 
void solve(){
    int n,x;
    cin>>n>>x;
    int ans=0;
    int a[55];
    for(int i=1;i<=n;i++){
        cin>>a[i];
    }
    if(a[1]>ans) ans=a[1];
    for(int i=2;i<=n;i++){
        if(a[i]-a[i-1]>ans) ans=a[i]-a[i-1];
    }
    if(2*(x-a[n])>ans) ans=2*(x-a[n]);
    cout<<ans<<endl;
}
 
int main(){
    int t;
    cin>>t;
    while(t--){
        solve();
    }
}

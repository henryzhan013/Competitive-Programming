void solve(){
    ll n;
    cin>>n;
    vector<ll> a(n+1), neg(n+1), pos(n+2);
    bool flag=true;
    for(ll i=1;i<=n;++i) {
        cin>>a[i];
        if(i>1 && a[i]<=a[i-1]){
            flag=false;
        }
    }
    if(flag){
        cout<<0<<endl;
        return;
    }
    neg[1]=1;
    for(ll i=2;i<=n;++i){
        if(a[i]>=a[i-1]){
            neg[i]=neg[i-1]+1;
        }else{
            neg[i]=neg[i-1];
        }
    }
    pos[n]=0; pos[n+1]=0;
    for(ll i=n-1;i>=1;--i){
        if(a[i]>=a[i+1]){
            pos[i]=pos[i+1]+1;
        }else{
            pos[i]=pos[i+1];
        }
    }
    ll ans=min(pos[1], neg[n]);
    for(ll i=1;i<=n;++i){
        ans=min(ans, neg[i]+pos[i+1]);
    }
    cout<<ans<<endl;
}
 
int32_t main(){
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    int t;
    cin>>t;
    while(t--){
        solve();
    }
}

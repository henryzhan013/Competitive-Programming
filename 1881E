#include <iostream>

using namespace std;
typedef long long ll;

const ll N=200005;


void solve(){
    ll n;
    cin>>n;
    ll a[N], dp[N];
    for(ll i=1;i<=n;i++) cin>>a[i];
    dp[n+1]=0;
    for(ll i=n;i>=1;i--){
        if(a[i]+i>n){
            dp[i]=dp[i+1]+1;
        }else{
            dp[i]=min(dp[i+1]+1, dp[i+a[i]+1]);
        }
    }
    cout<<dp[1]<<endl;
}

int main() {
    ios::sync_with_stdio(false);  cin.tie(0);
    int t;
    cin>>t;
    while(t--){
        solve();
    }
    return 0;
}

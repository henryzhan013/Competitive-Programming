#include <iostream>
#include <algorithm>
 
using namespace std;
typedef long long ll;
const int N=200005;
int a[N+5];
 
void solve(){
    int n;
    cin>>n;
    int mxn=-1000;
    for(int i=1;i<=n;i++){
        cin>>a[i];
        if(a[i]>mxn) mxn=a[i];
    }
    int cur=max(a[1],0);
    for(int i=2;i<=n;i++){
        if((abs(a[i]-a[i-1]))%2==1){
            cur=max(0,cur+a[i]);
        }else{
            cur=max(0,a[i]);
        }
        if(cur>mxn){
            mxn=cur;
        }
    }
    cout<<mxn<<endl;
}
 
int main() {
    ios::sync_with_stdio(false);  cin.tie(0);
    int t;
    cin>>t;
    while(t--){
        solve();
    }
    return 0;
}
